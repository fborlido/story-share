<div class="card">
    <div class="card-content">
        <h3>Log In</h3>
        <div class="divider"></div>
        <div class="row">
            <form class="col s12">
                <div class="row field">
                    <div class="input-field col s12">
                        <input id="email" type="email" class="validate">
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="row field">
                    <div class="input-field col s12">
                        <input id="password" type="password" class="validate">
                        <label for="password">Password</label>
                    </div>
                </div>
            </form>
        </div>
        <div class="row bottom">
            <div class="col s12">
                <button href="/dashboard" class="btn cyan darken-1 waves-effect waves-light login-btn">Log In</button>
            </div>
            <small>Need an account? <a href="/users/register">Register here</a></small>
        </div>
    </div>
</div>