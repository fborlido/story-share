<div class="dash-container">
    {{>navBar}}
    <main class="container">
        <h3 style="padding: 0.75rem;">Create a new Story!</h3>
        <div class="row">
            <div class="col s8">
                <div class="card">
                    <form action="/stories/create" method="POST">
                        <div class="card-content">
                            {{> errorsPartial}}
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="title" type="text" name="title" class="validate" value="{{title}}">
                                    <label for="title">Title</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <textarea id="content" type="text" name="content" value="{{content}}"
                                        class="materialize-textarea validate">{{content}}</textarea>
                                    <label for="content">Your Story</label>
                                </div>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn cyan darken-1 waves-effect waves-light" type="submit">POST!
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    {{>footer}}
</div>