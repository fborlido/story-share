<div class="dash-container">
    {{>navBar}}
    <main class="container" style="margin-top: 50px;">
        <div class="row">
            <div class="col s8">
                <div class="card">
                    <div class="card-content">
                        <h3 class="custom-text" style="margin-top: 7px;">{{story.title}}</h3>
                        {{#each sentence}}
                            <p style="font-size: 1.2rem;">{{this}}</p>
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="col s4 profile-card">
                <div class="card ">
                    <div class="card-content">
                        <h4>{{story.author.name}}</h4>
                    </div>
                    <div class="card-action">
                        <a href="#">More from this author</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
    {{>footer}}    
</div>